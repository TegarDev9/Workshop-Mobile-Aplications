<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu2"
    android:padding="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".registrasi">

    <TextView
        android:id="@+id/tv_signup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/medium"
        android:gravity="center_horizontal"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_noteUp1"
        android:text="Please enter your account here"
        android:fontFamily="@font/regular"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/tv_signup1"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_noteUp1"
        android:layout_marginTop="25dp"
        android:background="@drawable/custum_text"
        android:drawableLeft="@drawable/ic_profile"
        android:drawablePadding="10dp"
        android:fontFamily="@font/regular"
        android:hint="Enter your full name"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_emailUp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="10dp"
        android:background="@drawable/custum_text"
        android:drawableLeft="@drawable/ic_email2"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/regular"
        android:hint="Enter your email" />

    <EditText
        android:id="@+id/et_passwordUp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_emailUp1"
        android:layout_marginTop="10dp"
        android:background="@drawable/custum_text"
        android:drawableLeft="@drawable/ic_password"
        android:drawableRight="@drawable/ic_passwordhide"
        android:drawablePadding="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/regular"
        android:hint="Enter your password" />

    <TextView
        android:id="@+id/tv_noteUp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_passwordUp1"
        android:layout_marginTop="25dp"
        android:gravity="left"
        android:textSize="15sp"
        android:text="Your password must contain :"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_noteUp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_noteUp2"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_ticksquare"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:textSize="15sp"
        android:text="Atleast 6 character"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_nextUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_noteUp3"
        android:layout_marginTop="25dp"
        android:background="@drawable/custum_btn"
        android:fontFamily="@font/medium"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_noteUp5"
        android:background="@drawable/ic_continue_with"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="15sp"
        android:fontFamily="@font/regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_nextUp"/>

    <ImageButton
        android:id="@+id/img_google"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_noteUp5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/goggle2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_footerUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_google"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="68dp"
        android:textSize="15sp"
        android:fontFamily="@font/regular"
        android:gravity="center_horizontal"
        android:text="Already have account?, "
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_footerUp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_google"
        android:layout_toRightOf="@+id/tv_footerUp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/regular"
        android:text=" Sign In"
        android:textSize="15sp"
        android:textColor="@color/PrimaryDark"/>


</RelativeLayout>